{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff",
  ],
  "includePaths": [
    "go.mod",
    "go.sum",
    "Dockerfile",
    "cmd/webhook/Dockerfile",
  ],
  "postUpdateOptions": [
    "gomodTidy",
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,
  "baseBranches": [
    "master",
    "release-1.4",
    "release-1.3",
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "labels": [
    "renovate/stop-updating",
    "kind/clean-up",
    "release-note/misc",
    "ok-to-test",
  ],
  "stopUpdatingLabel": "renovate/stop-updating",
  "packageRules": [
    {
      "matchDepNames": [
        "gke.gcr.io/debian-base"
      ],
      "versioning": "regex:gke\.gcr\.io/debian-base:bullseye-v[0-9]+\.[0-9]+\.[0-9]+-gke\.[0-9]+",
    },
  ],
}
