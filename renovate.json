{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff",
  ],
  "includePaths": [
    "go.mod",
    "go.sum",
    "Dockerfile",
    "cmd/webhook/Dockerfile",
  ],
  "postUpdateOptions": [
    "gomodTidy",
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,
  "baseBranches": [
    "master",
    "release-1.5.2",
    "release-1.4",
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "labels": [
    "renovate/stop-updating",
    "kind/clean-up",
    "area/dependency",
    "release-note-none",
    "ok-to-test",
  ],
  "stopUpdatingLabel": "renovate/stop-updating",
  "packageRules": [
    {
      "matchDepNames": [
        "gke.gcr.io/debian-base"
      ],
      "versioning": "regex:^gke\\.gcr\\.io/debian-base:bullseye-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-gke\\.(?<build>\\d+)$",
    },
    {
      "groupName": "debian base",
      "groupSlug": "debian-base",
      "matchPackageNames": [
        "gke.gcr.io/debian-base"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "path",
        "build",
      ],
    },
    {
      "matchPackageNames": [
        "go",
      ],
      "allowedVersions": "<1.20",
      "matchBaseBranches": [
        "release-1.4",
      ],
    },
  ],
}
